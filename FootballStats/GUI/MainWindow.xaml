<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football Stats" Height="550" Width="725">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0"
                Margin="40,41,191,396"
                FontWeight="Bold"
                FontSize="18"
                Name="CreatePersonButton"
                Content="New Person"
                Click="OnButtonCreatePersonClick"/>
        <Button Grid.Column="0"
        	    Margin="193,41,38,396"
        	    FontWeight="Bold"
        	    FontSize="18" 
                Content="Show Persons"
                Click="OnButtonShowPersonsClick"/>

        <Button Grid.Column="0"
        	Margin="40,161,191,276"
        	FontWeight="Bold"
        	FontSize="18"
            Name="NewClubButton"
        	Content="New Club"
        	Click="OnNewClubButtonClick"/>

        <Button Grid.Column="1"
        	    Margin="116,41,115,396"
        	    FontWeight="Bold"
        	    FontSize="18"
                IsEnabled="False"
                Content="Show Person"/>


    </Grid>
</Window>
